<script type="text/javascript">
  $(function () {
  $('#datetimepicker1').datetimepicker({
                        pickTime: false, format: "DD-mm-YYYY"
  });
});
</script>

<div class="form-group">
  <%= form_for [@project, @task], remote: true do |f| %>
  <div class="form-inline">
    <%= f.text_area :title, class: "form-control", placeholder: "Task Title", rows: 1 %>
    
    <div class="input-group date form-group" id="datetimepicker1">
      <%= f.text_field :due_date, class: "form-control", placeholder: "Due Date" %>
      <span class="input-group-addon">
      <span class="glyphicon glyphicon-calendar"></span>
      </span>
    </div>
      <%= f.submit class: "btn btn-default task-submit" %><br>
  </div>
  <% end %>
</div>